{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 500,
    "title": "Health Care Quality in each country (2020)",
    "data": {
      "url": "https://raw.githubusercontent.com/KuahJiaChen/Data-Visualisation-Week-10-Homework/main/data/bubble_plot.csv"
    },
    "params": [
      {
        "name": "Population_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000000,
          "step": 1000000,
          "name": "Minimum Population: "
        }
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.health_care_index > 0"},
      {"filter": "datum.health_care_expenditure_index > 0"},
      {"filter": "datum.population > Population_Above"},
      {
        "filter": "Continent_selection == null || datum.continent == Continent_selection"
      }
    ],
    "encoding": {
      "x": {
        "field": "health_care_index",
        "type": "quantitative",
        "title": "Health Care Index",
        "scale": {"type": "linear", "domain": [1, 100]}
      },
      "y": {
        "field": "health_care_expenditure_index",
        "type": "quantitative",
        "title": "Health Care Expenditure Index",
        "scale": {"type": "linear", "domain": [1, 200]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "country", "type": "nominal", "title" : "Country Name"},
            {"field": "continent", "type": "nominal", "title" : "Continent"},
            {"field": "health_care_index", "type": "quantitative", "format": ",", "title" : "Health Care Index"},
            {"field": "health_care_expenditure_index", "type": "quantitative", "format": ",", "title" : "Health Care Expenditure Index"},
            {"field": "population", "type": "quantitative", "format": ",", "title" : "Population"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['country'] == 'China' || datum['country'] == 'Singapore' || datum['country'] == 'Australia' || datum['country'] == 'New Zealand' || datum['country'] == 'Italy' || datum['country'] == 'Yemen' ||  datum['country'] == 'United States'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "country", "type": "nominal","title": "Country Name"},
            {"field": "continent", "type": "nominal", "title": "Continent"},
            {"field": "health_care_index", "type": "quantitative", "format": "," , "title": "Health Care Index"},
            {"field": "health_care_expenditure_index", "type": "quantitative", "format": ",", "title": "Health Care Expenditure Index"},
            {"field": "population", "type": "quantitative", "format": "," , "title" : "Population"}
          ]
        }
      }
    ]
  }